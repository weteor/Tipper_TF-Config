/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
	model = "tipper_tf";
	compatible = "weteor,tipper_tf";

	chosen {
		zephyr,code-partition = &code_partition;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,display = &epd0;
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		rows = <7>;
		columns = <5>;
		map = <
		RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) 		RC(0,4) RC(0,3) RC(0,2) RC(0,1) RC(0,0)
		RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) 		RC(1,4) RC(1,3) RC(1,2) RC(1,1) RC(1,0)
		RC(5,0) RC(5,1) RC(5,2) RC(5,3) RC(5,4)	        RC(2,4) RC(2,3) RC(2,2) RC(2,1) RC(2,0)
		                        RC(6,3) RC(6,2) 		RC(6,1) RC(6,0)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		label = "KSCAN";
        
        debounce-period = <6>;

		diode-direction = "row2col";
		col-gpios
			= <&gpio0  2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio0 26 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			;
		row-gpios
			= <&gpio0 13 GPIO_ACTIVE_HIGH>
			, <&gpio0 15 GPIO_ACTIVE_HIGH>
			, <&gpio0 20 GPIO_ACTIVE_HIGH>
			, <&gpio0 12 GPIO_ACTIVE_HIGH>
			, <&gpio1  9 GPIO_ACTIVE_HIGH>
			, <&gpio0  8 GPIO_ACTIVE_HIGH>
			, <&gpio1  0 GPIO_ACTIVE_HIGH>
			;
	};

	vbatt {
		compatible = "zmk,battery-voltage-divider";
		label = "BATTERY";
		io-channels = <&adc 7>;
		output-ohms = <2000000>;
		full-ohms = <(2000000 + 820000)>;
	};
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&spi0 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    sck-pin = <9>;
    mosi-pin = <10>; 
    miso-pin = <5>; 
    /* cs-gpios = <&gpio0 4 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; */
    cs-gpios = <&gpio0 4 GPIO_ACTIVE_LOW>;

    epd0: jd79653@0 {
        compatible = "gooddisplay,jd79653";
        label = "DISPLAY";
        spi-max-frequency = <4000000>;
        reg = <0>;
        height = <200>;
        width  = <200>;
        dc-gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;
        reset-gpios = <&gpio1 13 GPIO_ACTIVE_LOW>;
        /* busy-gpios = <&gpio1 15 GPIO_ACTIVE_LOW>; */
        busy-gpios = <&gpio1 15 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        /* pwr = [03 06 29 29]; */
        pwr = [03 0a 39 39 06]; //std Values
        tcon = <0x22>;
        cdi  = <0x07>;
        vcom-dc = <0x00>;
    };
};

&usbd {
	status = "okay";
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		sd_partition: partition@0 {
			label = "mbr";
			reg = <0x00000000 0x00001000>;
		};
		code_partition: partition@1000 {
			label = "code_partition";
			reg = <0x00001000 0x000d3000>;
		};

		storage_partition: partition@d4000 {
			label = "storage";
			reg = <0x000d4000 0x00020000>;
		};

		boot_partition: partition@f4000 {
			label = "adafruit_boot";
			reg = <0x000f4000 0x0000c000>;
		};
	};
};

